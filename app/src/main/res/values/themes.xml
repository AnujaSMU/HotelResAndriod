<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HotelRes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
    </style>

    <style name="Theme.HotelRes" parent="Base.Theme.HotelRes" />
    
    <!-- Button style -->
    <style name="AppTheme.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="AppTheme.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
    
    <!-- Toolbar title style -->
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- Progress Bar style -->
    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:colorControlActivated">@color/primary</item>
    </style>
    
    <!-- Card style -->
    <style name="AppTheme.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>